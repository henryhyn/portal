header.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed[type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar']
        span.sr-only
          | Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      = link_to 'Project name', root_path, class: 'navbar-brand'
    nav#navbar.collapse.navbar-collapse
      ul.nav.navbar-nav
        li class=(active_page(root_path))
          = link_to 'Home', root_path
        li class=(active_page(help_path))
          = link_to 'Help', help_path
        li class=(active_page(about_path))
          = link_to 'About', about_path
        li class=(active_page(contact_path))
          = link_to 'Contact', contact_path
